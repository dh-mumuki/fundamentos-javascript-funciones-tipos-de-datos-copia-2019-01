describe("Descripci√≥n del grupo", function() {
  it("Declarada y asignada la variable unNumeroChico", function() {
    assert.notEqual(unNumeroChico, "undefined");
    assert.ok(typeof unNumeroChico === "number");
  });
    it("Declarada y asignada la variable unNumeroGrande", function() {
    assert.notEqual(unNumeroGrande, "undefined");
    assert.ok(typeof unNumeroGrande === "number");
  });
    it("Declarada y asignada la variable esMenor", function() {
    assert.notEqual(esMenor, "undefined");
    assert.ok(esMenor === unNumeroChico < unNumeroGrande);
  });
    it("Declarada y asignada la variable esMayor", function() {
    assert.notEqual(esMayor, "undefined");
    assert.ok(esMayor === unNumeroChico > unNumeroGrande);
  });
})